<UserControl x:Class="Mine2CraftWinApp.UserControls.SelectionMenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mine2CraftWinApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">
    <Grid>

        <StackPanel Grid.Column="1">
            <Button Click="GoToCraftListClick" Content="Liste des craft" Height="50" Width="200" Margin="0,30"></Button>
            <Button Click="GoToCompleteItemManager" Content="Complete Item Manager" Height="50" Width="200" Margin="0,30"></Button>
            <Button Click="GoToItemManagerPage" Content="Item Manager" Height="50" Width="200" Margin="0,30"></Button>
            <Button Click="GoToFurnaceManagerPage" Content="Furnace Manager" Height="50" Width="200" Margin="0,30"></Button>

            <Image Width="100" Height="100" Source="/UserControls/arrowload.jpg" Stretch="Fill"/>

        </StackPanel>

    </Grid>
</UserControl>